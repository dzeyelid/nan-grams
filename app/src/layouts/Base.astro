---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="いろんな素材の大さじ、小さじが何グラムかを表示するアプリ" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <header class="bg-white shadow-md">
      <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-indigo-600">nan-grams</h1>
        <p class="text-gray-600 mt-1">大さじ・小さじ グラム変換表</p>
      </div>
    </header>
    
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    
    <footer class="bg-white mt-16 border-t border-gray-200">
      <div class="container mx-auto px-4 py-6 text-center text-gray-600 text-sm">
        <p>© 2025 nan-grams. Japanese ingredient measurement reference.</p>
      </div>
    </footer>
  </body>
</html>
